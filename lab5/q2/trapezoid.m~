%--------------------------------------------------------------------------
%            Trapezoid Rule
%--------------------------------------------------------------------------
a=[0.5:0.001:1];
syms x
f=x^4;
k=subs(f,a);
trapz(a,k)
%--------------------------------------------------------------------------
%            Midpoint Rule
%--------------------------------------------------------------------------
low=0.5;
high=1;
b=[low:(low+high)/13:high];
z=low;
value=0;
while(z<high)
    value=value+((low+high)/13)*subs(f,((2*z)+((low+high)/13))/2);
    z=z+((low+high)/13);
end
value
%--------------------------------------------------------------------------
%            Simpson's 1/3 Rule
%--------------------------------------------------------------------------
value=0;
z=low;
while(z<high)
    value=value+1/6*((low+high)/13)*(subs(f,z)+4*subs(f,((2*z)+((low+high)/13))/2)+subs(f,z+((low+high)/13)));
    z=z+((low+high)/13);
end
value
