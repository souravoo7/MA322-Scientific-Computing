%--------------------------------------------------------------------------
%   Euler's Explicit Method 
%--------------------------------------------------------------------------
k=explicit(0,1,100);
h=1/100;
l=[0:h:1-h];
odeset('InitialStep',0.01);
%--------------------------------------------------------------------------
%   Euler's Implicit Method
%--------------------------------------------------------------------------
h1=1/100;
l1=[0:h1:1-h1];
k1=implicit(0,1,100,0.1);
%--------------------------------------------------------------------------
%   Using ode23(inbuilt matlab function using Runge Kutta 2/3 order) 
%--------------------------------------------------------------------------
f=inline('sin(t)-y');%function definition
[T,Y]=ode23(f,[0,1],1);
%--------------------------------------------------------------------------
%   Using ode45(inbuilt matlab function using Runge Kutta 4/5 order)
%--------------------------------------------------------------------------
[T1,Y1]=ode45(f,[0,1],1);
%--------------------------------------------------------------------------
%   Using ode23t(inbuilt matlab function using trapezoidal rule)
%--------------------------------------------------------------------------
[T2,Y2]=ode23t(f,[0,1],1);
%--------------------------------------------------------------------------
%       Manually solving the Runge-Kutta method of Fourth Order
%--------------------------------------------------------------------------
N=100;%in 100 steps
x0=0;
xf=1;% time range
[T3,Y3]=rungekutta(x0,xf,N);
subplot(1,2,1);
plot(l,k,l1,k1,T,Y,T1,Y1,T2,Y2,T3,Y3);
% now moving to the multistep methods
%--------------------------------------------------------------------------
%   Using Adams-Bashforth Method(second order)
%--------------------------------------------------------------------------
x0=1;
t0=0;
tf=1;
N=100;
[T4,Y4]=ab2(f,t0,x0,tf,N);
%--------------------------------------------------------------------------
%   Using Adams-Moulton Method(2nd order)
%--------------------------------------------------------------------------
ep=0.01;
J=100;
[T5,Y5]=AM(N,ep,J);
subplot(1,2,2);
plot(Y4,T4,Y5,T5);